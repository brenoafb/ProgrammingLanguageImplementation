func even(int n) : bool {
  if (n < 0) {
    if (n == -1) {
      return false;
    }
    return even(n+2);
  } else if (n > 0) {
    if (n == 1) {
      return false;
    }
    return even(n-2);
  } else {
    return true;
  }
}
func f(int n) : int {
  if (even(n)) {
    return 1;
  } else {
    return 0;
  }
}

func main() : void {
  int x;
  int y;
  x = 10;
  y = f(x);
}
